<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splashbtn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgorund"
    tools:context=".Tips_page">

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="415dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tips"
            android:layout_width="401dp"
            android:layout_height="130dp"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:text="Tips"
            android:textSize="24sp"
            tools:ignore="MissingConstraints"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:text="Water is the key to a healthier you! ðŸ’§ Stay hydrated, boost your energy, and keep your mind sharp. Every sip brings you closer to better healthâ€”drink up and thrive!"
            android:textColor="@color/black"
            />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="wrap_content"
            android:layout_height="606dp"
            app:srcCompat="@mipmap/tips1" />

    </LinearLayout>

    <Button
        android:id="@+id/btnexplore"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:text="Explore More Tips"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>